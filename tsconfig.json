{
  "extends": "./tsconfig.build.json",
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "typings/*.d.ts"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "allowUnreachableCode": false,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
  }
}
